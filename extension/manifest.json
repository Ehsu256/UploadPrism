{
  "manifest_version": 3,
  "name": "UploadPrism",
  "short_name": "UP",
  "version": "0.1",
  "description": "Upload images and videos to your PhotoPrism server. (https://github.com/photoprism/photoprism)",
  "icons": {
    "16": "icons/icon-16px.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ]
}